@using PizzaShop.Client.Public.Layouts
@using demos.blazer.webapp.Layouts

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <LayoutView Layout="@GetLayout(routeData)">
            <RouteView RouteData="@routeData" />
        </LayoutView>
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

@code {
    private Type GetLayout(RouteData routeData)
    {
        if (routeData.PageType.FullName?.Contains("PizzaShop", StringComparison.InvariantCultureIgnoreCase) ?? false)
        {
            return typeof(PizzaShopLayout);
        }

        return typeof(MainLayout);
    }
}